body
    background-color: #f2f2f2
    font-family: 'helvetica'
    margin: 0
    padding: 0

h1
    font-size: 1em
    display: inline
a
    text-decoration: none
    &:hover
        text-decoration: underline
    &:visited
        color: #999

ol.resource_list
    margin-top: 2em
    margin-right: 1em
    .page
        display: none
 
    div.description, span.pages
        display: none
    li
        color: #999
        margin-top: .8em

    li.current
        color: #222
        a:visited, a
            color: initial
        div.description, span.pages
            display: block
        .page.current
            display: block;
            background-color: #fefeaa;
            padding: 0em .5em;
            border: 1px solid #fff;
            color: #393838;
            margin-top: .6em;
            margin-left: -.5em;
            box-shadow: 1px 1px 3px rgba(0,0,0,0.2);
            
            code
                background-color: yellow;
                font-weight: 800;
                color: red;
