@import 'nib'
@import 'constants'

Dark = rgba(0,0,5,0.5)
Light = rgba(255,255,255,0.9)
Falloff = 40px
Saturated = 20px

body
    background-color: #CCC
    font-family: 'helvetica'
    margin: 0
    padding: 0
    /* background-color: #7d8579; */
    background-image: url(images/cloth_0.jpg);

@keyframes phong {
    0% {
        background-position-x: -100px
        opacity: 1
    }
    25% {
        background-position-x: -100px
        opacity: 1
    }
    75% {
        background-position-x: SBWidth
        opacity: 0
    }
    100% {
        background-position-x: SBWidth
        opacity: 0
    }
}


.filter
    position: absolute
    left: 0px
    top: 0px
    z-index: 10
    width: 200%
    height: 100%
    background-image: linear-gradient(left, Dark, Falloff Light, Falloff+Saturated Light, Falloff*2+Saturated Dark);
    background-repeat: repeat-x

.filter.foldout
    animation: phong Duration
    
h1
    font-size: 1em
    display: inline
a
    text-decoration: none
    &:hover
        text-decoration: underline
    &:visited
        color: #999

ol.resource_list
    margin-top: 2em
    margin-right: 1em
    .page
        display: none
 
    div.description, span.pages
        display: none
    li
        color: #999
        margin-top: .8em

    li.current
        color: #222
        a:visited, a
            color: initial
        div.description, span.pages
            display: block
        .page.current
            display: block;
            background-color: #fefeaa;
            padding: 0em .5em;
            border: 1px solid #fff;
            color: #393838;
            margin-top: .6em;
            margin-left: -.5em;
            box-shadow: 1px 1px 3px rgba(0,0,0,0.2);
            
            code
                background-color: yellow;
                font-weight: 800;
                color: red;
